{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "mongodb+srv://usuario:senha@cluster.mongodb.net/contadordias",
    "JWT_SECRET": "seu-jwt-secret-aqui",
    "FRONTEND_URL": "https://seu-app.vercel.app"
  }
}